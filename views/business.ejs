<!DOCTYPE html>
<html>
    <head>
        <title>Business | Byte-Sized Business Boost</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
        <link rel="stylesheet" href="css/base.css">
        <link rel="stylesheet" href="css/layout.css">
        <link rel="stylesheet" href="css/navbar.css">
        <link rel="stylesheet" href="css/business.css">
        <link rel="stylesheet" href="css/reviews.css">
    </head>
    <body>
        <!-- NAVBAR -->
        <nav class="navbar navbar-main content-container">
            <div class="navbar-inner">
                <div class="flex center">
                    <a href="/" class="btn btn-sm">
                        <span class="navbar-brand">
                            Byte-Sized Business Boost
                        </span>
                    </a>
                </div>

                <div class="d-flex align-items-center gap-3">
                    <span id="roleBadge" class="badge bg-secondary">Guest</span>
                    <div class="dropdown">
                        <button
                            class="btn btn-link p-0 border-0 dropdown-toggle"
                            id="userMenuButton"
                            data-bs-toggle="dropdown"
                            aria-expanded="false"
                        >
                            <img id="avatar" width="40" height="40" class="rounded-circle">
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenuButton">
                            <li>
                                <a id="profileLink" class="dropdown-item" href="/profile">Profile</a>
                            </li>
                            <li>
                                <button id="logoutBtn" class="dropdown-item text-danger" type="button">
                                    <i class="bi bi-box-arrow-right"></i>
                                    Sign Out
                                </button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>

        <div class="business-page content-container top-controls d-flex flex-column gap-1">
            <!-- HERO -->
            <div class="business-hero">
                <img id="hero-image" />
                <div id="favourite-btn" class="favourite-btn" title="Favourite">
                    <!-- outline -->
                    <svg id="heart-outline" viewBox="0 0 24 24">
                        <path d="M12 21s-7.5-4.7-10-9c-2-3.4.5-8 5-8
                                2.5 0 4 2 5 3.5
                                C13 6 14.5 4 17 4
                                c4.5 0 7 4.6 5 8
                                -2.5 4.3-10 9-10 9z"/>
                    </svg>

                    <!-- filled -->
                    <svg id="heart-filled" viewBox="0 0 24 24">
                        <path d="M12 21s-7.5-4.7-10-9c-2-3.4.5-8 5-8
                                2.5 0 4 2 5 3.5
                                C13 6 14.5 4 17 4
                                c4.5 0 7 4.6 5 8
                                -2.5 4.3-10 9-10 9z"/>
                    </svg>
                </div>
            </div>

            <!-- HEADER INFO -->
            <div class="business-header">
                <h1 id="business-name"></h1>
                <div class="rating">
                    <i class="bi bi-star-fill"></i> <span id="rating"></span>
                    <span id="review-count"></span>
                    <span id="favourite-count"></span>
                </div>

                <div id="categories" class="categories"></div>
            </div>

            <!-- DESCRIPTION -->
            <section class="business-section">
                <h3>About</h3>
                <p id="description"></p>
            </section>

            <!-- REVIEWS -->
            <section class="business-section">
                <h3>Reviews</h3>

                <div id="review-list"></div>

                <div id="review-box" class="review-box">
                    <textarea placeholder="Write a review..."></textarea>
                    <button>Post Review</button>
                </div>
            </section>

        </div>

        <script>
            const BUSINESS_ID = "<%= businessId %>";
        </script>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        <script src="js/auth.js"></script>
        <script src="js/businessDetail.js"></script>
        <script src="js/reviewPosting.js"></script>
        <script src="js/favouriting.js"></script>
    </body>
</html>