<!DOCTYPE html>
<html>
    <head>
        <title>Business | Byte-Sized Business Boost</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
        <link rel="stylesheet" href="business.css">
        <link rel="stylesheet" href="reviews.css">
    </head>
    <body>
        <div class="business-page">

            <!-- HERO -->
            <div class="business-hero">
                <img id="hero-image" />
                <div id="favourite-btn" class="favourite-btn" title="Favourite">
                    <!-- outline -->
                    <svg id="heart-outline" viewBox="0 0 24 24">
                        <path d="M12 21s-7.5-4.7-10-9c-2-3.4.5-8 5-8
                                2.5 0 4 2 5 3.5
                                C13 6 14.5 4 17 4
                                c4.5 0 7 4.6 5 8
                                -2.5 4.3-10 9-10 9z"/>
                    </svg>

                    <!-- filled -->
                    <svg id="heart-filled" viewBox="0 0 24 24">
                        <path d="M12 21s-7.5-4.7-10-9c-2-3.4.5-8 5-8
                                2.5 0 4 2 5 3.5
                                C13 6 14.5 4 17 4
                                c4.5 0 7 4.6 5 8
                                -2.5 4.3-10 9-10 9z"/>
                    </svg>
                </div>
            </div>

            <!-- HEADER INFO -->
            <div class="business-header">
                <h1 id="business-name"></h1>
                <div class="rating">
                    <i class="bi bi-star-fill"></i> <span id="rating"></span>
                    <span id="review-count"></span>
                    <span id="favourite-count"></span>
                </div>

                <div id="categories" class="categories"></div>
            </div>

            <!-- DESCRIPTION -->
            <section class="business-section">
                <h3>About</h3>
                <p id="description"></p>
            </section>

            <!-- REVIEWS -->
            <section class="business-section">
                <h3>Reviews</h3>

                <div id="review-list"></div>

                <div id="review-box" class="review-box">
                    <textarea placeholder="Write a review..."></textarea>
                    <button>Post Review</button>
                </div>
            </section>

        </div>

        <script>
            const BUSINESS_ID = "<%= businessId %>";
        </script>

        <script src="businessDetail.js"></script>
        <script src="reviewPosting.js"></script>
        <script src="favouriting.js"></script>
    </body>
</html>