<!DOCTYPE html>
<html>
    <head>
        <title>Profile | Byte-Sized Business Boost</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
        <link rel="stylesheet" href="./profile/css/base.css">
        <link rel="stylesheet" href="./profile/css/layout.css">
        <link rel="stylesheet" href="./profile/css/navbar.css">
    </head>
    <body>
        <nav class="navbar navbar-main content-container">
            <div class="navbar-inner">
                <div class="flex center">
                    <a href="/" class="btn btn-sm">
                        <span class="navbar-brand">
                            Byte-Sized Business Boost
                        </span>
                    </a>
                </div>

                <div class="d-flex align-items-center gap-3">
                    <span id="roleBadge" class="badge bg-secondary">Guest</span>
                    <img id="avatar" width="40" height="40" class="rounded-circle">
                </div>
            </div>
        </nav>

        <main class="container py-4">
            <section class="profile-header d-flex align-items-center gap-3 mb-4">
                <img id="profileAvatar" class="rounded-circle" width="72" height="72" alt="User avatar">
                <div>
                    <h1 id="profileName" class="h3 mb-1"></h1>
                    <p id="profileEmail" class="mb-0"></p>
                </div>
            </section>

            <section class="mb-4">
                <h2 class="h4">Favourite Businesses</h2>
                <div id="favouritesList" class="list-group"></div>
            </section>

            <section>
                <h2 class="h4">Your Reviews</h2>
                <div id="reviewsList" class="list-group"></div>
            </section>
        </main>

        <script src="./profile/profile.js"></script>
    </body>
</html>